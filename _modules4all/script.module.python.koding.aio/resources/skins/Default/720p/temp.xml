                <texturefocus colordiffuse="ffFFE76E">DialogBack.png</texturefocus>
                <texturenofocus colordiffuse="7f49526B">DialogBack.png</texturenofocus>
                <font>font12_title</font>
                <textcolor>FFFFFFFF</textcolor>
                <focusedcolor>FFFF8E1C</focusedcolor>
                <align>center</align>
                <onleft>99</onleft>
                <onright>101</onright>
                <onup>99</onup>
