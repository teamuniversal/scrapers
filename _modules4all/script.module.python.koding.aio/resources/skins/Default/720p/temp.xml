		<control type="group">
			<control type="textbox" id="15">
				<description>terms details</description>
				<posx>30</posx>
				<posy>75</posy>
				<width>1200</width>
				<height>550</height>
				<label>$INFO[Window(Home).Property(PK_Main_Text)]</label>
				<font>font13</font>
				<align>justify</align>
				<textcolor>FFFFFFFF</textcolor>
				<shadowcolor>black</shadowcolor>
				<pagecontrol>99</pagecontrol>
			</control>
