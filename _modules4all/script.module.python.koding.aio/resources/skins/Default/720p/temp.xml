			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture border="40" colordiffuse="e5120B52">DialogBack.png</texture>
		</control>
		<control type="image">
			<description>Dialog Header image</description>
			<posx>40</posx>
			<posy>16</posy>
			<width>1200</width>
			<height>40</height>
			<texture>dialogheader.png</texture>
		</control>
		<control type="label" id="1">
			<description>header label</description>
			<posx>40</posx>
			<posy>20</posy>
			<width>1200</width>
			<height>30</height>
			<font>font13_title</font>
			<label>$INFO[Window(Home).Property(PK_Header)]</label>
